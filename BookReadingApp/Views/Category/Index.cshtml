@model IEnumerable<BookReadingApp.Models.Category>

<h2>Danh sách thể loại</h2>

<a asp-action="Create" class="btn btn-primary">Thêm thể loại mới</a>

<table class="table">
    <thead>
        <tr>
            <th>Tên thể loại</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
