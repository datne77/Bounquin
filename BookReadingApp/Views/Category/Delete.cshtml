@model BookReadingApp.Models.Category

<h2>❌ Xóa thể loại</h2>

<p>Bạn có chắc muốn xóa thể loại: <strong>@Model.Name</strong>?</p>

<!-- Form xóa (ẩn submit thực tế) -->
<form id="deleteCategoryForm" asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="button" class="btn btn-danger" onclick="confirmDelete()">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    function confirmDelete() {
        Swal.fire({
            title: 'Bạn có chắc chắn?',
            text: 'Xóa thể loại này sẽ xóa luôn liên kết đến các sách nếu có!',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Xóa',
            cancelButtonText: 'Hủy'
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById('deleteCategoryForm').submit();
            }
        });
    }
</script>
